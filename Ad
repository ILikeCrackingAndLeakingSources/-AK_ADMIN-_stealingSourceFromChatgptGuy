loadstring(game:HttpGet("https://raw.githubusercontent.com/vqmpjayZ/More-Scripts/refs/heads/main/Anthony's%20ACL"))()
local replicatedStorage = game:GetService("ReplicatedStorage")
local textChatService = game:GetService("TextChatService")
local oldChat = false

-- Check if the old chat system is being used
if replicatedStorage:FindFirstChild('DefaultChatSystemChatEvents') then
    oldChat = true
end

-- Function to send a message
local function Chat(msg)
    if oldChat then
        -- Old chat system
        replicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(msg, "All")
    else
        -- New chat system
        textChatService.TextChannels.RBXGeneral:SendAsync(msg)
    end
end

-- Example usage with modified message
Chat("AK ADMIN | Join ḍ̲ị̲ṣ̲с̲ọ̲ṛ̲ḍ̲ Server: ḍ̲ị̲ṣ̲с̲ọ̲ṛ̲ḍ̲.ɡ̲ɡ̲/ḅ̲ɡ̲Ẉ̲Ỵ̲2ẓ̲Ẹ̲Ṿ̲7ẓ̲")
