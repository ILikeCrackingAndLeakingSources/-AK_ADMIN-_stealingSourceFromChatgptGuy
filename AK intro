local Player = game.Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")
local BlurEffect = Instance.new("BlurEffect")
local UIGradient = Instance.new("UIGradient")
local UICorner = Instance.new("UICorner")

-- Set up ScreenGui
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

-- Set up TextLabel
TextLabel.Parent = ScreenGui
TextLabel.Size = UDim2.new(0.1, 0, 0.05, 0) -- Initial size for intro
TextLabel.Position = UDim2.new(0.45, 0, 0.45, 0) -- Center text on the screen
TextLabel.Text = "AK ADMIN"
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.GothamBlack -- Use a fancier font
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255) -- Keep text color white
TextLabel.TextStrokeTransparency = 0.1 -- Make stroke more visible
TextLabel.TextTransparency = 1 -- Start off invisible

-- Add UIGradient to the text (White fading to purple)
UIGradient.Parent = TextLabel
UIGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 255, 255)), -- White at start
    ColorSequenceKeypoint.new(1, Color3.fromRGB(128, 0, 128)) -- Purple at end
}

-- Add UICorner to the TextLabel for smoother corners
UICorner.Parent = TextLabel
UICorner.CornerRadius = UDim.new(0.2, 0)

-- Set up BlurEffect
BlurEffect.Parent = game.Lighting
BlurEffect.Size = 30 -- Reduced blur for better visibility

-- Smooth Intro Animation
wait(1) -- Delay before starting

-- Intro Animation: Text starts small and grows while fading in
TextLabel.TextTransparency = 1 -- Start fully transparent
TextLabel:TweenSizeAndPosition(
    UDim2.new(0.6, 0, 0.2, 0), -- Final size
    UDim2.new(0.2, 0, 0.4, 0), -- Centered position
    Enum.EasingDirection.Out,
    Enum.EasingStyle.Quad,
    1,
    true
) -- Zoom in to the center

for i = 1, 30 do
    BlurEffect.Size = BlurEffect.Size - 0.5 -- Reduce blur gradually
    TextLabel.TextTransparency = TextLabel.TextTransparency - 0.033 -- Fade in text
    wait(0.05)
end

-- Pause for a moment before the main animation
wait(1)

-- Main Animation: Add a pulse effect for the text
for i = 1, 3 do
    TextLabel.TextStrokeTransparency = 0.2 -- Make stroke more visible
    TextLabel.TextSize = TextLabel.TextSize + 5 -- Increase size briefly (adjusted for smaller GUI)
    wait(0.2)
    TextLabel.TextStrokeTransparency = 0.1 -- Restore stroke transparency to be more visible
    TextLabel.TextSize = TextLabel.TextSize - 5 -- Reset size
    wait(0.2)
end

-- Final touch before outro
wait(2)

-- Improved Outro Animation: Zoom in centered, then out, with fade effect
TextLabel:TweenSizeAndPosition(
    UDim2.new(0.5, 0, 0.2, 0), -- Larger size
    UDim2.new(0.25, 0, 0.4, 0), -- Centered position
    Enum.EasingDirection.Out,
    Enum.EasingStyle.Quad,
    0.5,
    true
) -- Zoom in to the center
wait(0.5)
TextLabel.TextTransparency = 0 -- Make text fully visible before zooming out
TextLabel:TweenSizeAndPosition(
    UDim2.new(0, 0, 0, 0), -- Shrink to nothing
    UDim2.new(0.5, 0, 0.5, 0), -- Shrink from the center
    Enum.EasingDirection.In,
    Enum.EasingStyle.Quad,
    0.5,
    true
) -- Zoom out centered
wait(0.5)

-- Fade out while zooming out
for i = 0, 1, 0.1 do
    TextLabel.TextTransparency = 1 - i -- Gradually fade out
    wait(0.05)
end

-- Remove BlurEffect and ScreenGui after outro animation completes
BlurEffect:Destroy()
ScreenGui:Destroy()
