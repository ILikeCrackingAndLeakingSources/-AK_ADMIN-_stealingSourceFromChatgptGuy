-- AK ADMIN Fancy Intro Animation Script (Improved Outro with Fade Effect)

local Player = game.Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
local TextLabel = Instance.new("TextLabel")
local BlurEffect = Instance.new("BlurEffect")
local UIGradient = Instance.new("UIGradient")
local UICorner = Instance.new("UICorner")

-- Set up ScreenGui
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

-- Set up TextLabel
TextLabel.Parent = ScreenGui
TextLabel.Size = UDim2.new(0.6, 0, 0.2, 0)
TextLabel.Position = UDim2.new(0.2, 0, 0.4, 0) -- Center text on the screen
TextLabel.Text = "AK ADMIN"
TextLabel.TextScaled = true
TextLabel.Font = Enum.Font.GothamBlack -- Use a fancier font
TextLabel.TextColor3 = Color3.new(1, 1, 1) -- Start white
TextLabel.TextStrokeTransparency = 0.5 -- Light stroke for better visibility
TextLabel.TextTransparency = 1 -- Start off invisible

-- Add UIGradient to the text (Half white, half black)
UIGradient.Parent = TextLabel
UIGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 255, 255)), -- White at start
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0)) -- Black at end
}

-- Add UICorner to the TextLabel for smoother corners
UICorner.Parent = TextLabel
UICorner.CornerRadius = UDim.new(0.2, 0)

-- Set up BlurEffect
BlurEffect.Parent = game.Lighting
BlurEffect.Size = 56 -- High blur initially

-- Intro Animation
wait(1) -- Delay before starting
for i = 1, 30 do
    BlurEffect.Size = BlurEffect.Size - 1.5 -- Reduce blur gradually
    TextLabel.TextTransparency = TextLabel.TextTransparency - 0.033 -- Make text visible
    wait(0.05)
end

-- Add a pulse effect for the text
for i = 1, 3 do
    TextLabel.TextStrokeTransparency = 0.2 -- Make stroke more visible
    TextLabel.TextSize = TextLabel.TextSize + 10 -- Increase size briefly
    wait(0.2)
    TextLabel.TextStrokeTransparency = 0.5 -- Restore stroke transparency
    TextLabel.TextSize = TextLabel.TextSize - 10 -- Reset size
    wait(0.2)
end

-- Final touch before outro
wait(2)

-- Improved Outro Animation: Zoom in centered, then out, with fade effect
TextLabel:TweenSizeAndPosition(
    UDim2.new(0.8, 0, 0.3, 0), -- Larger size
    UDim2.new(0.1, 0, 0.35, 0), -- Centered position
    Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.5, true
) -- Zoom in to the center
wait(0.5)
TextLabel.TextTransparency = 0 -- Make text fully visible before zooming out
TextLabel:TweenSizeAndPosition(
    UDim2.new(0, 0, 0, 0), -- Shrink to nothing
    UDim2.new(0.5, 0, 0.5, 0), -- Shrink from the center
    Enum.EasingDirection.In, Enum.EasingStyle.Quad, 0.5, true
) -- Zoom out centered
wait(0.5)

-- Fade out while zooming out
for i = 0, 1, 0.1 do
    TextLabel.TextTransparency = 1 - i -- Gradually fade out
    wait(0.05)
end

-- Remove BlurEffect and ScreenGui after outro animation completes
BlurEffect:Destroy()
ScreenGui:Destroy()
